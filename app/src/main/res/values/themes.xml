<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Lovoj App Light Theme -->
    <style name="Theme.LovojApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color Scheme -->
        <item name="colorPrimary">@color/pink_button</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white_text</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black_grey</item>
        <item name="colorOnSecondary">@color/white_text</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
        
        <!-- Background Colors -->
        <item name="android:windowBackground">@color/background_white</item>
        <item name="colorSurface">@color/background_white</item>
        <item name="colorOnSurface">@color/black</item>
        
        <!-- Status and Navigation Bar -->
        <item name="android:statusBarColor">@color/pink_button</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Card Style -->
        <item name="cardBackgroundColor">@color/background_white</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        
        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.LovojApp.Button</item>
        
        <!-- Input Style -->
        <item name="textInputStyle">@style/Widget.LovojApp.TextInputLayout</item>
    </style>

    <!-- Lovoj App Dark Theme -->
    <style name="Theme.LovojApp.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color Scheme -->
        <item name="colorPrimary">@color/pink_button</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white_text</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black_grey</item>
        <item name="colorOnSecondary">@color/white_text</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/white_text</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
        
        <!-- Background Colors -->
        <item name="android:windowBackground">@color/background_black</item>
        <item name="colorSurface">@color/background_black</item>
        <item name="colorOnSurface">@color/white_text</item>
        
        <!-- Status and Navigation Bar -->
        <item name="android:statusBarColor">@color/pink_button</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        
        <!-- Card Style -->
        <item name="cardBackgroundColor">@color/background_black</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        
        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.LovojApp.Button</item>
        
        <!-- Input Style -->
        <item name="textInputStyle">@style/Widget.LovojApp.TextInputLayout</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.LovojApp.Splash" parent="Theme.LovojApp">
        <item name="android:windowBackground">@color/background_white</item>
        <item name="android:statusBarColor">@color/pink_button</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <!-- TV Theme for Android TV -->
    <style name="Theme.LovojApp.TV" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Color Scheme -->
        <item name="colorPrimary">@color/pink_button</item>
        <item name="colorPrimaryVariant">@color/pink_button</item>
        <item name="colorOnPrimary">@color/white_text</item>
        <item name="colorSecondary">@color/pink_button</item>
        <item name="colorSecondaryVariant">@color/pink_button</item>
        <item name="colorOnSecondary">@color/white_text</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
        
        <!-- Background Colors -->
        <item name="android:windowBackground">@color/tv_background</item>
        <item name="colorSurface">@color/tv_surface</item>
        <item name="colorOnSurface">@color/tv_text_primary</item>
        
        <!-- Status and Navigation Bar -->
        <item name="android:statusBarColor">@color/pink_button</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        
        <!-- Card Style -->
        <item name="cardBackgroundColor">@color/tv_card</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        
        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.LovojApp.Button</item>
        
        <!-- Input Style -->
        <item name="textInputStyle">@style/Widget.LovojApp.TextInputLayout</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.LovojApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/pink_button</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom Text Input Layout Style -->
    <style name="Widget.LovojApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/pink_button</item>
        <item name="hintTextColor">@color/pink_button</item>
    </style>

    <!-- Legacy themes for compatibility -->
    <style name="Theme.MyApp" parent="Theme.LovojApp">
    </style>

    <style name="Theme.TvofflineLogin" parent="Theme.LovojApp.Splash">
    </style>

    <style name="Theme.TVOffline" parent="Theme.LovojApp.TV">
    </style>
</resources>
